@model FaturamentoViewModel?

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Faturamento de Contas";
}

<form class="d-grid d-md-flex flex-wrap align-items-end gap-2" action="/contas/faturamento" method="get">
    <div class="form-group d-grid">
        <label for="data" class="control-label fs-6">Data:</label>
        <input type="date" name="data" class="form-control" value="@(string.IsNullOrWhiteSpace(Context.Request.Query["data"]) ? DateTime.Today.ToString("yyyy-MM-dd") : Context.Request.Query["data"])" required />
    </div>

    <button class="btn btn-primary px-5" >
        <i class="bi bi-filter"></i>
        Filtrar
    </button>
</form>

<hr />

@if (Model is not null)
{
    @if (!Model.Registros.Any())
    {
        <p>Nenhum registro foi encontrado para a data solicitada.</p>
    }
    else
    {
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Titular</th>
                    <th>Garçom</th>
                    <th>Mesa</th>
                    <th>Valor Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pedido in Model.Registros)
                {
                    <tr>
                        <td>@pedido.Titular</td>
                        <td>@pedido.Garcom</td>
                        <td>@pedido.Mesa</td>
                        <td>@pedido.ValorTotal.ToString("C2")</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-end">
            <span><strong>Total Diário:</strong> @Model.Total.ToString("C2")</span>
        </div>
    }
}